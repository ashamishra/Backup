DESTDIR="~/Backup_dir/"
#mkdir -p "$DESTDIR"
#ls -ld "$DESTDIR"
echo -n "Enter a path : "
read n
mkdir -p "$n"
ls  "$n"
if [ -d  $n ]; then
    echo the directory exists!
    tar -zcvf $(date '+%s').tar.gz $n
tar -zcvf \~/Backup_dir/$(date '+%s').tar.gz Backup_dir

else
    echo the directory does not exist!
fi
